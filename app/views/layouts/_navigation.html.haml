-# navigation styled for Bootstrap 3.0
%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-left
        %li
          %a.navbar-brand= link_to 'Svido', root_path
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'HOME', root_path
        %li= link_to 'CATEGORIES', "#"
        %li= link_to 'ADVERTISEMENTS', products_path
        %li= link_to 'ABOUT', "#"
        %li= link_to 'DONATE NOW', "#"
        %li= link_to 'MEMBERS', users_path
        %li
          - if user_signed_in?
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %li
                  =image_tag("gear-2-16.png")
                  %ul.dropdown-menu
                    %li= link_to 'Profile', current_user
                    %li= link_to 'Edit', edit_user_registration_path
                    %li.divider
                    %li
                      = link_to 'Sign out', destroy_user_session_path, :method=>'delete'
          - else
            %li= link_to 'Sign in', new_user_session_path
            %li= link_to 'Sign up', new_user_registration_path
