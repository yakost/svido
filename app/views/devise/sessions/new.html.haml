.container-fluid.text-center
  .row
    .container
      .col-sm-4.col-sm-offset-4
        .panel.panel-default
          .panet-title
            %h2 Sign IN
          .panel-body
            = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
              = render 'layouts/errors_messages_signin', object: f.object
              .form-group
                = link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,:method => :get, :class => 'btn-lg btn-primary btn-block'
                = link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), :method => :get , :class => 'btn-lg btn-danger btn-block'
              %hr.sign_up
              .form-group
                .input-group
                  %span.input-group-addon
                    %i.fa.fa-user
                  = f.email_field :email, :autofocus => true, placeholder: 'Email Address', class: 'form-control'
              .form-group
                .input-group
                  %span.input-group-addon
                    %i.fa.fa-shield
                  - if devise_mapping.recoverable?
                  = f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off"
              .form-group.text-left
                - if devise_mapping.rememberable?
                  .checkbox
                    %label
                      = f.check_box :remember_me
                      = f.label :remember_me
                    = link_to "Forgot password?", new_password_path(resource_name), class: 'pull-right'
              .text-center
                = f.submit 'Sign in', :class => 'btn-block btn-lg btn-success'
                  =link_to""
              %hr
              .text-left
                - if devise_mapping.registerable?
                  %b Not yet a member of Svido?
                  = link_to 'Sign up', new_registration_path(resource_name), class: 'pull-right'
